<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ivTeacherImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.02" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvKlassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                style="@style/TextStyle.Bold"
                android:layout_toRightOf="@id/ivTeacherImage"
                tools:text="Music Class" />

            <TextView
                android:id="@+id/tvTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivTeacherImage"
                android:layout_below="@id/tvKlassName"
                tools:text="Ms. Johnson"
                android:paddingTop="5dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvAboutClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle.Bold"
        android:text="About the class"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/tvClassDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ms. Johnson"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/tvAboutTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextStyle.Bold"
        android:text="About the teacher"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/tvTeacherBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bio"
        android:paddingTop="5dp" />

</LinearLayout>